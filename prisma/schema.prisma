generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          String    @default("USER")
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  password      String?
  clinicId      String?
  accounts      Account[]
  reviews       Review[]
  sessions      Session[]
  clinic        Clinic?   @relation(fields: [clinicId], references: [id])
  favorites     Clinic[]  @relation("UserFavorites")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Clinic {
  id           String              @id @default(cuid())
  name         String
  description  String?
  address      String?
  city         String?
  phone        String?
  image        String?
  website      String?
  isVerified   Boolean             @default(false)
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt
  translations ClinicTranslation[]
  reviews      Review[]
  services     Service[]
  owners       User[]
  insurances   Insurance[]         @relation("ClinicInsurances")
  specialties  Specialty[]         @relation("ClinicSpecialties")
  favoritedBy  User[]              @relation("UserFavorites")
}

model ClinicTranslation {
  id          String  @id @default(cuid())
  locale      String
  name        String
  description String?
  address     String?
  city        String?
  clinicId    String
  clinic      Clinic  @relation(fields: [clinicId], references: [id], onDelete: Cascade)

  @@unique([clinicId, locale])
}

model Service {
  id           String               @id @default(cuid())
  name         String
  description  String?
  priceMin     Float?
  priceMax     Float?
  currency     String               @default("IRR")
  clinicId     String
  createdAt    DateTime             @default(now())
  updatedAt    DateTime             @updatedAt
  categoryId   String?
  category     Category?            @relation(fields: [categoryId], references: [id])
  clinic       Clinic               @relation(fields: [clinicId], references: [id], onDelete: Cascade)
  translations ServiceTranslation[]
}

model ServiceTranslation {
  id          String  @id @default(cuid())
  locale      String
  name        String
  description String?
  serviceId   String
  service     Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@unique([serviceId, locale])
}

model Review {
  id        String   @id @default(cuid())
  rating    Int
  comment   String?
  status    String   @default("PENDING")
  userId    String
  clinicId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  clinic    Clinic   @relation(fields: [clinicId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id])
}

model Specialty {
  id           String                 @id @default(cuid())
  name         String?
  createdAt    DateTime               @default(now())
  updatedAt    DateTime               @updatedAt
  translations SpecialtyTranslation[]
  clinics      Clinic[]               @relation("ClinicSpecialties")
}

model SpecialtyTranslation {
  id          String    @id @default(cuid())
  locale      String
  name        String
  specialtyId String
  specialty   Specialty @relation(fields: [specialtyId], references: [id], onDelete: Cascade)

  @@unique([specialtyId, locale])
}

model Insurance {
  id           String                 @id @default(cuid())
  name         String?
  createdAt    DateTime               @default(now())
  updatedAt    DateTime               @updatedAt
  translations InsuranceTranslation[]
  clinics      Clinic[]               @relation("ClinicInsurances")
}

model InsuranceTranslation {
  id          String    @id @default(cuid())
  locale      String
  name        String
  insuranceId String
  insurance   Insurance @relation(fields: [insuranceId], references: [id], onDelete: Cascade)

  @@unique([insuranceId, locale])
}

model Category {
  id           String                @id @default(cuid())
  name         String?
  createdAt    DateTime              @default(now())
  updatedAt    DateTime              @updatedAt
  translations CategoryTranslation[]
  services     Service[]
}

model CategoryTranslation {
  id         String   @id @default(cuid())
  locale     String
  name       String
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@unique([categoryId, locale])
}
